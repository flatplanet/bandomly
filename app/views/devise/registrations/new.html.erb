<% provide(:title, "Join For Free") %>
<div class="text-vertical-center2">
  <%= render "home/infobar" %>
  <div class="container col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading"><h2>Join For Free</h2></div>
    <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control", :autofocus => true %>
      </div>
      
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control", :autofocus => true %>
      </div>
      
      <div class="form-group">
        <%= f.label :primary_instrument, 'Primary Instrument (You can add more later)' %>
        <%= f.text_field :primary_instrument, class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode, class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    
     
    
      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-dark btn-lg white' %>
      </div>
    <% end %>
    </div>
    
    <div class="panel-footer"><%= render "devise/shared/links" %></div>
  </div>
</div>
</div>
</div>
</header>
  